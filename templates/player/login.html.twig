{% extends 'base.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="{{ asset ("css/appPlayer.css") }}">

    <div class="row justify-content-center">

        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        <form method="post">
            <div class="row">
                <label for="username">Pseudo : </label>
                <input type="text" name="_username" id="username">
                <input type="password" name="_password" id="password" value="123" hidden>
            </div>

            <div class="row">
                <button class="btn border active" type="submit">Connexion</button>
                <a class="btn border" href="{{ path('player_new') }}">S'inscrire</a>
            </div>
        </form>

    </div>

{% endblock %}


