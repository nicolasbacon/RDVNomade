{% extends 'base.html.twig' %}

{% block title %}Les Enigmes{% endblock %}

{% block body %}

    <div class="row justify-content-between" style="padding: 100px 0px 20px 0px">

        <svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-list" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
        </svg>

        <img class="photoProfil" src="{{ asset('uploads/' ~ app.user.photo) }}" alt="Photo profil" width="150" height="170">
    </div>

    <div class="row" style="padding-bottom: 20px">
        <h1 style="font-size: 80px">Les Enigmes</h1>
    </div>

    <div class="row">
        {% for enigma in enigmas %}
            <div class="col-3" style="padding-bottom: 20px">
                <a class="btn btn-warning" style="border-radius: 20px" href="{{ path('enigma_show', {'id': enigma.id}) }}">{{ loop.index }}</a>
            </div>
        {% else %}
            no records found
        {% endfor %}
    </div>

{% endblock %}
