{% extends 'base.html.twig' %}

{% block title %}Session : {{ session.name }}{% endblock %}

{% block body %}
    {% include "admin/navAdmin.html.twig" %}
    <h1>Session : {{ session.name }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Activée</th>
            <th>Synchrone</th>
            <th>Date de Fin</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ session.name }}</td>
                <td>{{ session.enable ? 'Oui' : 'Non' }}</td>
                <td>{{ session.synchrone ? 'Oui' : 'Non' }}</td>
                <td>{{ session.dateEndSession |format_datetime('full', 'none', locale='fr')}}</td>
                <td>
                    <a href="{{ path('admin_active_session', {'id': session.id}) }}">Activer</a>
                </td>
            </tr>
        </tbody>
    </table>
    <br>

    <hr>

    <h1>Groupes</h1>

    <table class="table">
        <thead>
        <tr>

            <th>Numéro du groupe</th>
            <th>Activé</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for groupe in groupes %}
            <tr>
                <td>{{ groupe.number }}</td>
                <td>{{ groupe.enable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('team_show', {'id': groupe.id}) }}">Ouvrir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun Groupe Ici</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}