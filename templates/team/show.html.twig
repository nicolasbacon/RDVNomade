{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ team.number }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ team.enable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>TimeTeam</th>
                <td>{{ team.timeTeam ? team.timeTeam|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('team_index') }}">back to list</a>

    <a href="{{ path('team_edit', {'id': team.id}) }}">edit</a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
