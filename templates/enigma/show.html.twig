{% extends 'base.html.twig' %}

{% block title %}Enigma{% endblock %}

{% block body %}
    <h1>Enigma</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ enigma.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ enigma.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ enigma.description }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                <td>{{ enigma.answer }}</td>
            </tr>
            <tr>
                <th>Solved</th>
                <td>{{ enigma.solved }}</td>
            </tr>
            <tr>
                <th>Try</th>
                <td>{{ enigma.try }}</td>
            </tr>
            <tr>
                <th>Star</th>
                <td>{{ enigma.star ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('enigma_index') }}">back to list</a>

    <a href="{{ path('enigma_edit', {'id': enigma.id}) }}">edit</a>

    {{ include('enigma/_delete_form.html.twig') }}
{% endblock %}
