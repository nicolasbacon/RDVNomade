{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ session.name }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ session.enable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Synchrone</th>
                <td>{{ session.synchrone ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>TimeSession</th>
                <td>{{ session.timeSession ? session.timeSession|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TimeAlert</th>
                <td>{{ session.timeAlert ? session.timeAlert|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('session_index') }}">back to list</a>

    <a href="{{ path('session_edit', {'id': session.id}) }}">edit</a>

    {{ include('session/_delete_form.html.twig') }}
{% endblock %}
