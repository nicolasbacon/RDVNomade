{% extends 'base.html.twig' %}

{% block title %}Session index{% endblock %}

{% block body %}
    <h1>Session index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Enable</th>
                <th>Synchrone</th>
                <th>TimeSession</th>
                <th>TimeAlert</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td>{{ session.id }}</td>
                <td>{{ session.name }}</td>
                <td>{{ session.enable ? 'Yes' : 'No' }}</td>
                <td>{{ session.synchrone ? 'Yes' : 'No' }}</td>
                <td>{{ session.timeSession ? session.timeSession|date('H:i:s') : '' }}</td>
                <td>{{ session.timeAlert ? session.timeAlert|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('session_show', {'id': session.id}) }}">show</a>
                    <a href="{{ path('session_edit', {'id': session.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('session_new') }}">Create new</a>
{% endblock %}
